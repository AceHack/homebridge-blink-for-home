{
    "name": "homebridge-blink-for-home",
    "displayName": "Blink for Home",
    "private": false,
    "version": "3.7.1",
    "description": "Blink for Home Cameras for homebridge",
    "license": "MIT",
    "keywords": [
        "homebridge-plugin",
        "homekit",
        "blink for home",
        "blink camera"
    ],
    "main": "src/index.js",
    "files": [
        "src",
        "config.schema.json"
    ],
    "repository": {
        "type": "git",
        "url": "git@github.com:colinbendell/homebridge-blink-for-home.git"
    },
    "engines": {
        "node": ">=12.0.0",
        "homebridge": ">=1.2.0"
    },
    "dependencies": {
        "@adobe/helix-fetch": "^2.1.7",
        "@homebridge/camera-utils": "^1.4.0",
        "commander": "^6.2.0",
        "ffmpeg-for-homebridge": "0.0.9"
    },
    "devDependencies": {
        "eslint": "^7.21.0",
        "eslint-config-google": "^0.14.0",
        "homebridge": "^1.2.3",
        "homebridge-config-ui-x": "^4.39.1"
    },
    "scripts": {
        "lint": "eslint src/**.js --max-warnings=0",
        "watch": "npm run build && npm link",
        "build": "",
        "prepublishOnly": "npm run build",
        "test": "jest"
    },
    "eslintConfig": {
        "extends": [
            "eslint:recommended",
            "google"
        ],
        "parserOptions": {
            "ecmaVersion": 2019
        },
        "env": {
            "es6": true,
            "node": true
        },
        "rules": {
            "indent": ["error", 4],
            "brace-style": ["error", "stroustrup"],
            "max-len": ["error", 120],
            "require-jsdoc": "off",
            "valid-jsdoc": "off",
            "arrow-parens": ["error", "as-needed"]
        }
    }
}
